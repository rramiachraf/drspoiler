{
  "exclude": ["__tests__", "node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "typeRoots": ["@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@helpers/*": ["helpers/*"]
    },
    "noEmitOnError": true,
    "resolveJsonModule": true
  }
}
